    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Test for Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}_test.py",
                "-v",
                "-s",
                "--lf"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}